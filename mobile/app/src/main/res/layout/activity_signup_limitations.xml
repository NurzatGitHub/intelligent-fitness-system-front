<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:background="@drawable/bg_auth_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 7 of 8"
            android:textColor="#BFFFFFFF"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginBottom="18dp"
            app:trackCornerRadius="100dp"
            app:trackThickness="6dp"
            app:trackColor="#33FFFFFF"
            app:indicatorColor="#6C5CE7"
            android:max="100" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="22dp"
            app:cardUseCompatPadding="true"
            app:strokeWidth="1dp"
            app:strokeColor="#2AFFFFFF"
            app:cardBackgroundColor="#1AFFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Injuries / Limitations"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select anything we should consider."
                    android:textColor="#BFFFFFFF"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupLimitations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    app:singleSelection="false"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipNone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No issues"
                        android:checkable="true"
                        android:minHeight="52dp"
                        app:chipStrokeWidth="1dp"
                        app:chipStrokeColor="#55FFFFFF"
                        app:chipBackgroundColor="#141A2A"
                        android:textColor="@android:color/white"
                        app:checkedIconVisible="false"
                        app:checkedIconTint="#6C5CE7"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBackPain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Back pain"
                        android:checkable="true"
                        android:minHeight="52dp"
                        android:layout_marginTop="8dp"
                        app:chipStrokeWidth="1dp"
                        app:chipStrokeColor="#55FFFFFF"
                        app:chipBackgroundColor="#141A2A"
                        android:textColor="@android:color/white"
                        app:checkedIconVisible="false"
                        app:checkedIconTint="#6C5CE7"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipKneePain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Knee pain"
                        android:checkable="true"
                        android:minHeight="52dp"
                        android:layout_marginTop="8dp"
                        app:chipStrokeWidth="1dp"
                        app:chipStrokeColor="#55FFFFFF"
                        app:chipBackgroundColor="#141A2A"
                        android:textColor="@android:color/white"
                        app:checkedIconVisible="false"
                        app:checkedIconTint="#6C5CE7"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipShoulderPain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shoulder pain"
                        android:checkable="true"
                        android:minHeight="52dp"
                        android:layout_marginTop="8dp"
                        app:chipStrokeWidth="1dp"
                        app:chipStrokeColor="#55FFFFFF"
                        app:chipBackgroundColor="#141A2A"
                        android:textColor="@android:color/white"
                        app:checkedIconVisible="false"
                        app:checkedIconTint="#6C5CE7"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipWristPain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wrist pain"
                        android:checkable="true"
                        android:minHeight="52dp"
                        android:layout_marginTop="8dp"
                        app:chipStrokeWidth="1dp"
                        app:chipStrokeColor="#55FFFFFF"
                        app:chipBackgroundColor="#141A2A"
                        android:textColor="@android:color/white"
                        app:checkedIconVisible="false"
                        app:checkedIconTint="#6C5CE7"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipOther"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:checkable="true"
                        android:minHeight="52dp"
                        android:layout_marginTop="8dp"
                        app:chipStrokeWidth="1dp"
                        app:chipStrokeColor="#55FFFFFF"
                        app:chipBackgroundColor="#141A2A"
                        android:textColor="@android:color/white"
                        app:checkedIconVisible="false"
                        app:checkedIconTint="#6C5CE7"/>

                </com.google.android.material.chip.ChipGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilOther"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:errorEnabled="true"
                    app:boxBackgroundColor="#141A2A"
                    app:boxStrokeColor="#55FFFFFF"
                    app:hintTextColor="#BFFFFFFF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOther"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Describe limitation"
                        android:maxLines="2"
                        android:inputType="textCapSentences|textMultiLine"
                        android:textColor="@android:color/white"
                        android:textColorHint="#88FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="18dp"
                    app:backgroundTint="#6C5CE7"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="14dp"
            android:text="Back"
            android:textAllCaps="false"
            app:cornerRadius="18dp"
            app:strokeColor="#55FFFFFF"
            android:textColor="@android:color/white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>
</ScrollView>
